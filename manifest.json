{
    "manifest_version": 3,
    "name": "Magus",
    "version": "1.0",
    "icons": {
        "96": "assets/icon.png"
    },
    "permissions": [
        "webRequest",
        "storage",
        "tabs",
        "activeTab"
    ],
    "background": {
        "service_worker": "src/background/service_chrome.js"
    },
    "action": {
        "default_icon": "assets/icon.png",
        "default_title": "Magus",
        "default_popup": "src/action/index.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content.js"
            ]
        }
    ]
}